<div class="lies-container">
    <div class="lies-intro">
        <h1>Third Party Licenses</h1>
        <p>This page lists the licenses of the projects used in this project.</p>
    </div>

    <h2>Overview of licenses:</h2>
    <ul class="lies-overview">
        {{#each overview}}
        <li><a href="#{{id}}">{{name}}</a> ({{count}})</li>
        {{/each}}
    </ul>

    <h2>All license text:</h2>
    <ul class="lies-license-list">
        {{#each licenses}}
        <li class="lies-license">
            <h3 id="{{id}}">{{name}}</h3>
            <h4>Used by:</h4>
            <ul class="lies-license-used-by">
                {{#each used_by}}
                <li><a href="{{#if crate.repository}} {{crate.repository}} {{else}} https://crates.io/crates/{{crate.name}} {{/if}}">{{crate.name}} {{crate.version}}</a></li>
                {{/each}}
            </ul>
            <pre class="lies-license-text">{{text}}</pre>
        </li>
        {{/each}}
    </ul>
</div>
